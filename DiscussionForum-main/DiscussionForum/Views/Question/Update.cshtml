@model QuestionViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1 class="text-center mb-3">Update question</h1>

<form class="d-flex flex-column gap-4" asp-action="Update">
    <partial name="_QuestionForm" model="@Model" />

    <div class="d-flex gap-3">
        <button type="submit" class="btn btn-primary">Save Changes</button>
        <a asp-action="UserQuestions" class="btn btn-secondary">Cancel</a>
    </div>
</form>

<style>
    textarea.form-control {
        min-height: 12rem;
    }
</style>