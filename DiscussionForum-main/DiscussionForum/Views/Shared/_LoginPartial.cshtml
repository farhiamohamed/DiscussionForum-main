@using Microsoft.AspNetCore.Identity

@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

<ul class="navbar-nav d-flex gap-3">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item d-flex align-items-center">
            <a id="manage" class="nav-link" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage"><i class="fa-regular fa-user fa-xl"></i></a>
        </li>
        <li class="nav-item">
            <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button class="text-uppercase loginBtn logoutBtn" id="logout" type="submit">Log out</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item text-uppercase d-flex align-items-center">
            <a class="hover-underline" id="register" asp-area="Identity" asp-page="/Account/Register">Register</a>
        </li>
        <li class="nav-item">
            <a id="login" asp-area="Identity" asp-page="/Account/Login">
                <button class="text-uppercase loginBtn">Log in</button>
            </a>
        </li>
    }
</ul>

<style>
    label {
        color: #6f7174;
    }

    .logoutBtn:hover {
        color: #649ef4;
    }
</style>
