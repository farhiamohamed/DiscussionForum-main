@model QuestionViewModel

<input type="hidden" asp-for="@Model.Question.QuestionId" />
<input type="hidden" asp-for="@Model.Question.Created" />
<input type="hidden" asp-for="@Model.Question.Id" />

<div class="form-group">
    <label asp-for="@Model.Question.Title"></label>
    <input asp-for="@Model.Question.Title" class="form-control px-3 py-2" />
    <span asp-validation-for="@Model.Question.Title" class="text-danger"></span>
</div>

<div class="form-group">
    <label asp-for="@Model.Question.Category"></label>
    <select asp-for="@Model.Question.CategoryId" asp-items="Model.CategorySelectList" class="form-control px-3 py-2">
    </select>
</div>

<div class="form-group">
    <label asp-for="@Model.Question.Content"></label>
    <textarea asp-for="@Model.Question.Content" class="form-control px-3 py-2"></textarea>
    <span asp-validation-for="@Model.Question.Content" class="text-danger"></span>
</div>

